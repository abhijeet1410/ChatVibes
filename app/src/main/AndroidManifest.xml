<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhijeet14.chatvibes">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AllChatActivity"
            android:label="My Chats" />
        <activity android:name=".ForgotActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".AllUsersActivity" />
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".PersonalChatActivity"
            android:parentActivityName=".AllChatActivity"/>
        <activity android:name=".FriendProfileActivity"/>
    </application>

</manifest>